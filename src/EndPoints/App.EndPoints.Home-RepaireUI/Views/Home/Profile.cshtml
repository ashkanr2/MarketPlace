@model App.Domain.Core.DtoModels.AppUserDto
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "پروفایل";
}
<main class="profile-user-page default space-top-30">
    <div class="container">
        <div class="row">
            <div class="profile-page col-xl-9 col-lg-8 col-md-12 order-2">
                <div class="row">
                    <div class="col-lg-12">
                        <header class="card-header">
                            <h3 class="card-title"><span>اطلاعات حساب کاربری</span></h3>
                        </header>
                        <div class="content-section default">
                            <div class="row">
                                <div class="col-sm-12 col-md-6">
                                    <p>
                                        <span class="title">نام  :</span>
                                        <span>
                                          @Model.Name
                                        </span>
                                    </p>
                                </div>
                                <div class="col-sm-12 col-md-6">
                                    <p>
                                        <span class="title"> نام خانوادگی :</span>
                                        <span>
                                           @Model.LastName
                                        </span>
                                    </p>
                                </div>
                                <div class="col-sm-12 col-md-6">
                                    <p>
                                        <span class="title">پست الکترونیک :</span>
                                        <span>@Model.Email</span>
                                    </p>
                                </div>
                                <div class="col-sm-12 col-md-6">
                                    <p>
                                        <span class="title">شماره تلفن همراه:</span>
                                        <span>@Model.PhoneNumber</span>

                                        @if ( Model.PhoneNumber == null)
                                        {
                                            <span>وارد نشده </span>
                                        }
                                    </p>
                                </div>

                                <div class="col-sm-12 col-md-6">
                                    <p>
                                        <span class="title">باقی مانده حساب  :</span>
                                        <span>@Model.Wallet</span>
                                        @if(Model.Wallet ==0 || Model.Wallet ==null ){
                                            <span>صفر</span>
                                        }
                                    </p>
                                </div>

                               

                                <div class="col-12 text-center">
                                    <a asp-action="EditeProfile" asp-controller="Home" class="btn btn-main-masai big_btn">
                                        ویرایش
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

            </div>
            <div class="profile-page-aside col-xl-3 col-lg-4 col-md-6 center-section order-1">
                <div class="profile-card-1">
                    <!--image-->
                    <div class="img">
                        @if (Model.UserProfileImageId != null )
                        {
                            var imagePath = Model.UserProfileImage.Path;
                            var imageUrl = $"~/uploads/{imagePath}";
                            <img class="img-fluid" src="@Url.Content(imageUrl)" alt="Product Image" />
                            <br />
                        }



                    </div>
                   
                    <div class="modal-share modal-width-custom modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                                    <h4 class="modal-title" id="myModalLabel">تغییر پروفایل</h4>
                                </div>
                                <div class="modal-body">
                                    <ul class="profile-avatars default text-center">
                                        <li>
                                            <img class="profile-avatars-item" src="/img/profile/1.png">
                                        </li>
                                        <li>
                                            <img class="profile-avatars-item" src="/img/profile/2.png">
                                        </li>
                                        <li>
                                            <img class="profile-avatars-item" src="/img/profile/3.png">
                                        </li>
                                        <li>
                                            <img class="profile-avatars-item" src="/img/profile/4.png">
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--text-->
                    <div class="mid-section">
                        <div class="name">@Model.Name - @Model.LastName </div>
                        <div class="description">
                            <a href="#" class="btn btn-main-masai">افزایش موجودی</a>

                        </div>
                        <div class="line"></div>

                    </div>
                </div>
               
                <div class="profile-menu ">
                    <ul class="profile-menu-items">
                        <li>
                            <a asp-action="Profile" asp-action="Home" class="dropdown-item active">
                                <i class="fa fa-user-large colormain"></i>
                                پروفایل
                            </a>
                        </li>
                        <li>
                            <a asp-action="EditeProfile" asp-controller="Home" class="dropdown-item">
                                <i class="fa fa-pencil colormain" aria-hidden="true"></i>
                                ویرایش اطلاعات
                            </a>
                        </li>
                        <li>
                            <a asp-action="Delivered" asp-controller="Order" class="dropdown-item ">
                                <i class="fa fa-cart-arrow-down colormain" aria-hidden="true"></i>
                                تحویل داده شده
                            </a>
                        </li>
                        <li>
                            <a href="order-current.html" class="dropdown-item ">
                                <i class="fa fa-cart-arrow-down colormain" aria-hidden="true"></i>    سفارش جاری
                            </a>
                        </li>
                        <li>
                            <a href="order-cancelled.html" class="dropdown-item">
                                <i class="fa fa-times colormain" aria-hidden="true"></i>
                                لغو شده
                            </a>
                        </li>
                      

                        <li>
                            <a href="order-message.html" class="dropdown-item">
                              
                                نظرات من
                            </a>
                        </li>


                        <li>
                            <a href="password-update.html" class="dropdown-item">
                                <i class="fa fa-shield colormain" aria-hidden="true"></i>
                                  تغییر رمز
                            </a>
                        </li>

                    </ul>
                </div>
            </div>
        </div>
    </div>
</main>