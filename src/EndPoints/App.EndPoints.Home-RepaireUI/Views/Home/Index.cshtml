@model List<App.Domain.Core.DtoModels.MothersCategoryDto>
@{
    ViewData["Title"] = "صفحه اصلی";
}

<h1 class="text-danger">@TempData["Message"]</h1>

<div>
    <main class="main default space-top-10">
        <div class="container space-top-50 ">
            <div class="row">
                <div class="col-12">
                    <div class="row banner-ads">
                        <div class="col-12">
                        </div>
                    </div>
                </div>


                <div class="row">
                    <div class="col-12">
                        <div class="widget widget-product card border_all bglight pad_time_prod" id="shegeft_1">
                            <header class="card-header">
                                <h3 class="card-title">
                                   دسته بندی 
                                </h3>
                            </header>
                            @if (Model != null)
                            {
                                <div class="row">
                                    <div class="col-12">
                 
                                        
                                            @foreach (var item in Model)
                                            {
                                            <li> <a asp-action="ProductCategory" asp-route-motherCategoryId="@item.Id" asp-controller="Product">@item.Title</a>  </li>
                                            }

                                     
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <div class="col-12">
                    <div class="row">
                        <div class="col-12">
                            <div class="widget widget-product card border_all bglight pad_time_prod" id="shegeft_1">
                                <header class="card-header">
                                    <h3 class="card-title">
                                        غرفه ها
                                    </h3>
                                </header>
                                <a asp-action="Booths" asp-controller="Booth">مشاهده غرفه ها</a>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div class="widget widget-product card border_all bglight pad_time_prod" id="shegeft_1">
                                <header class="card-header">
                                    <h3 class="card-title">
                                        کالاهای قیمت ثابت 
                                    </h3>
                                </header>
                                <a asp-action="AllProducts" asp-controller="Product">مشاهده همه ی کالاها</a>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div class="widget widget-product card border_all bglight pad_time_prod" id="shegeft_1">
                                <header class="card-header">
                                    <h3 class="card-title">
                                        کالاهای  مزایده ای
                                    </h3>
                                </header>
                                <a asp-action="AuctionProducts" asp-controller="Product">مشاهده همه  </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
           
        </div>
    </main>
</div>
