<!DOCTYPE html>
<html lang="fa">
@using Microsoft.AspNetCore.Identity
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="~/img/favicon.png">
    <link rel="icon" type="image/png" href="~/img/favicon.png">
    <title>@ViewData["Title"] </title>
    <meta name="description" content="مَسای شاپ ">
    <meta name="author" content="Mirazimi">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />


    <!-- CSS Files -->
    <link href="~/fonts/font-awesome/css/fontawesome.min.css" rel="stylesheet" />
    <link href="~/fonts/font-awesome/css/solid.css" rel="stylesheet" />
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/main_ui.css" rel="stylesheet" />
    <link href="~/css/icon.css" rel="stylesheet" />
    <link href="~/css/plugins/owl.carousel.css" rel="stylesheet" />
    <link href="~/css/plugins/owl.theme.default.min.css" rel="stylesheet" />
    <link href="~/css/main.css" rel="stylesheet" />
    <link href="~/css/style.css" rel="stylesheet" />
</head>

<body class="index-page sidebar-collapse">
    <div class="top-section fullscreen-container">
        <img src="~/img/banner_img/bg_top.jpg" class="h-100">
    </div>
   
    <div class="wrapper default">

        <!--start pc header -->
        <header class="Masai-header default">
            <div class="container-fluid">
                <div class="row">
                  

                    <div class="col-lg-4 col-md-5 col-sm-8 col-7">
                        <div class="search-area default">
                            <form method="post" asp-action="Result" asp-controller="Search" class="search">
                                <input type="text" name="item" placeholder="جستجو" >
                                <button type="submit"><img src="~/img/search.png" alt=""></button>
                            </form>
                        </div>
                    </div>
                    <a class="dropdown-item" asp-controller="Account" asp-action="Login" asp-area="">ورود</a>

                    <div class="col-lg-4 col-md-5 col-sm-8 col-7">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                پنل
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" asp-controller="Home" asp-action="Index" asp-area="Admin">پنل ادمین</a>
                                <a class="dropdown-item" asp-controller="Home" asp-action="Index" asp-area="Seller">پنل فروشنده</a>
                               
                            </div>
                        </li>

                    </div>





                    <div class="col-md-2 col-sm-12">
                        <div class="user_head">
                            <a asp-action="Profile" asp-controller="Home" class="iconhead">

                                <i class="fa fa-user-large font-20" aria-hidden="true"></i>
                            </a>

                        </div>


                        <div class="cart dropdown masai_dropdown">
                            <span class="divider"></span>

                            <a href="#" class="dropdown-toggle iconhead" data-toggle="dropdown" id="navbar_a">
                                <i class="fa fa-cart-arrow-down font-20" aria-hidden="true"></i>
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbar_a">


                                <ul class="m_cart-list">
                                    <li class="m_cart_li1">
                                        <a href="single-product.html" class="m_cart-item">
                                            <i class="fa fa-times" aria-hidden="true"></i>


                                            <div class="m_cart-item-content">
                                                <div class="m_cart-item-image">
                                                    <img src="~/img/product_img/p_6.jpg" />
                                                </div>
                                                <div class="m_cart-item-details">
                                                    <div class="m_cart-item-title">
                                                        ساعت هوشمند امیزفیت
                                                    </div>
                                                    <div class="m_cart-item-params">
                                                        <div class="m_cart-item-props">
                                                            <span>تعداد : 2</span>
                                                            <span>رنگ: سبز ارتشی</span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </a>
                                    </li>
                                    <li class="m_cart_li2">
                                        <a href="single-product.html" class="m_cart-item">
                                            <i class="fa fa-times" aria-hidden="true"></i>


                                            <div class="m_cart-item-content">

                                                <div class="m_cart-item-details">
                                                    <div class="m_cart-item-title">
                                                        شیائومی مدل Poco X4
                                                    </div>
                                                    <div class="m_cart-item-params">
                                                        <div class="m_cart-item-props">
                                                            <span>تعداد : 1</span>
                                                            <span>رنگ: مشکی</span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="m_cart-item-image">
                                                    <img src="~/img/product_img/p_9.jpg" />
                                                </div>
                                            </div>
                                        </a>
                                    </li>
                                </ul>
                                <div class="m_cart-header">
                                    <div class="m_cart-total">
                                        <span>مجموع سبد:</span>
                                        <span> ۳۵,۲۵۳,۵۰۰</span>
                                        <span> تومان</span>
                                    </div>
                                </div>
                                <div class="btn_cart">
                                    <a href="cart.html" class="btn btn_sabad">مشاهده سبد</a>
                                    <a href="Final-payment.html" class="btn btn_pardakht btn-main-masai">پرداخت</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <br />
        <br />
        <div>
            <br />
            <br />

        @RenderBody()
            <br />
            <br />
        </div>
        <br />
        <br />
