                                    <li>
                                        <a href="#">تخفیف سازمانی</a>
                                    </li>
                                    <li>
                                        <a href="#">تماس با ما</a>
                                    </li>
                                    <li>
                                        <a href="#">درباره ما</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-12 col-md-6 col-lg-3">
                            <div class="widget-menu widget card">
                                <div class="card-header">
                                    <h3 class="card-title">مجوزات</h3>
                                </div>
                                <div class="License_img">
                                    <a href="#" target="_blank"><img src="~/img/License_2.png" alt=""></a>
                                    <a href="#" target="_blank"><img src="~/img/License_1.png" alt=""></a>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
