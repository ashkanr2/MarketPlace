@model List<App.EndPoints.Home_RepaireUI.Models.Order.OrderDetailViewModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "سفارشات دریافت شده";


}
<main class="order-delivered default space-top-30">
    <div class="container">
        <div class="row">
            <div class="col-xl-9 col-lg-8 col-md-12 order-2">
                <div class="row">
                    <div class="col-lg-12">
                        <header class="card-header">
                            <h3 class="card-title"><span>تحویل داده شده</span></h3>
                        </header>
                        <div class="content-section default">
                            <div class="row">
                                <div class="col-md-12 col-sm-12 order_delivered_sec">
                                    <div class="profile-recent-fav-row">
                                        <div class="col-12">

                                            @foreach (var item in Model)
                                            {
                                                <h4 class="profile-recent-fav-name">
                                                    <i class="fa fa-check-circle" aria-hidden="true"></i> @item.status
                                                </h4>
                                                <ul>
                                                    <li>
                                                        کد سفارش : <b>@item.Id</b>
                                                    </li>
                                                    <li>
                                                        تاریخ : @item.ShamsiDate
                                                    </li>
                                                   
                                                    <li>
                                                        کمیسیون : <b>@item.Commission تومان</b>

                                                    </li>
                                                    <li>
                                                        مجموع سبد : <b>@item.TotalPrice تومان</b>
                                                            
                                                    </li>
                                                </ul>

                                            }
                                        </div>

                                        <div class="col-12">
                                            <div class="row">
                                                <div class="col-4 col-lg-2 col-md-2">
                                                    <img src="assets/img/product_img/p_7.jpg">
                                                </div>
                                                <div class="col-4 col-lg-2 col-md-2">
                                                    <img src="assets/img/product_img/p_9.jpg">
                                                </div>
                                                <div class="col-4 col-lg-2 col-md-2">
                                                    <img src="assets/img/product_img/p_11.jpg">
                                                </div>

                                            </div>


                                        </div>



                                        <div class="col-12 text-left">
                                            <a class="btn btn-main-masai">مشاهده فاکتور</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="profile-page-aside col-xl-3 col-lg-4 col-md-6 center-section order-1">
               
               
                <div class="profile-menu ">
                    <ul class="profile-menu-items">
                        <li>
                            <a asp-action="Profile" asp-controller="Home" class="dropdown-item active">
                                <i class="fa fa-user-large colormain"></i>
                                پروفایل
                            </a>
                        </li>
                        <li>
                            <a href="edit-profile.html" class="dropdown-item">
                                <i class="fa fa-pencil colormain" aria-hidden="true"></i>
                                ویرایش اطلاعات
                            </a>
                        </li>
                        <li>
                            <a asp-action="Delivered" asp-controller="Order" class="dropdown-item ">
                                <i class="fa fa-cart-arrow-down colormain" aria-hidden="true"></i>
                                تحویل داده شده
                            </a>
                        </li>
                        <li>
                            <a href="order-current.html" class="dropdown-item ">
                                <i class="fa fa-cart-arrow-down colormain" aria-hidden="true"></i>    سفارش جاری
                            </a>
                        </li>
                        <li>
                            <a href="order-cancelled.html" class="dropdown-item">
                                <i class="fa fa-times colormain" aria-hidden="true"></i>
                                لغو شده
                            </a>
                        </li>


                        <li>
                            <a href="order-message.html" class="dropdown-item">

                                نظرات من
                            </a>
                        </li>


                        <li>
                            <a href="password-update.html" class="dropdown-item">
                                <i class="fa fa-shield colormain" aria-hidden="true"></i>
                                تغییر رمز
                            </a>
                        </li>

                    </ul>
                </div>
            </div>
        </div>
    </div>
</main>