@model List< App.EndPoints.Home_RepaireUI.Areas.Admin.Models.Comment.CommentViewModel>
@{
    ViewData["Title"] = "نظرات";
    Layout = "~/Areas/Admin/Views/shared/_LayoutAdmin.cshtml";
    @addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
}
<div class="portlet-body">
    <Form method="post">

    
    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover">
            <thead>
                <tr>
                    <th><i class="icon-energy">ردیف</i></th>
                    <th>نام غرفه</th>
                    <th>تاریخ</th>
                    <th>کامنت</th>
                    <th>عملیات</th>
                    
                </tr>
            </thead>
            <tbody>
                <tr>
                    @{
                        int counter=1;
                    
                    @foreach (var item in Model)
                    {


                        <td>@counter</td>
                        <td class="text-center">@item.BoothName</td>
                        <td>@item.CreatedAt</td>
                        <td>@item.Comment</td>
                        @if (item.IsCreated == false)
                        {
                            <td>  <a class="btn btn-success btn-round" asp-controller="Comment" asp-action="Active" asp-route-Id="@item.Id">فعال کردن</a> </td>
                        }
                        @if (item.IsCreated == true)
                        {
                            <td> 
                               <a class="btn btn-danger btn-round" asp-controller="Comment" asp-action="Diactive" asp-route-Id="@item.Id"> غیرفعال </a>   
                            </td>
                        }
                   
                       counter++;     
                      }
                    }
                </tr>

            </tbody>
        </table>
    </div>
    </Form>
</div>
