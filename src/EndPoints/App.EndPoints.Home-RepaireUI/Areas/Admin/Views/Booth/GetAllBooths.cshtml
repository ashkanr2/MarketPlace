@model List<App.EndPoints.Home_RepaireUI.Areas.Admin.Models.Booth.BoothViewModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "لیست غرفه ها";
    Layout = "~/Areas/Admin/Views/shared/_LayoutAdmin.cshtml";
}
<div class="col-lg-12">
    <div class="portlet box border shadow">
        <div class="portlet-heading">
            <div class="portlet-title">
                <h3 class="title text text-center text-warning" >
                   لیست غرفه ها 
                </h3>
            </div><!-- /.portlet-title -->
           
        </div><!-- /.portlet-heading -->
        <div class="portlet-body">
            <div class="table-responsive">
                <div id="data-table_wrapper" class="dataTables_wrapper no-footer">
                        <div id="data-table_filter" class="dataTables_filter"><label>جستجو: <input type="search" class="" placeholder="" aria-controls="data-table"></label></div>
                    <table class="table table-bordered table-hover table-striped dataTable no-footer" id="data-table" role="grid" aria-describedby="data-table_info" style="width: 100%;">
                        <thead>
                            <tr role="row">
                                <th class="sorting_asc" tabindex="0" aria-controls="data-table" rowspan="1" colspan="1" aria-sort="ascending" aria-label="ردیف: activate to sort column descending" style="width: 175.535px;">ردیف</th>
                                <th class="sorting" tabindex="0" aria-controls="data-table" rowspan="1" colspan="1" aria-label="ماده غذایی: activate to sort column ascending" style="width: 433.674px;">نام غرفه</th>
                                <th class="sorting" tabindex="0" aria-controls="data-table" rowspan="1" colspan="1" aria-label="مقدار: activate to sort column ascending" style="width: 180.25px;">تاریخ تاسیس</th>
                                <td class="sorting_disabled" rowspan="1" colspan="1" aria-label="عملیات" style="width: 211.174px;">عملیات</td>
                            </tr>
                        </thead>
                        <tbody>

                            @{
                                int counter = 1;
                                foreach (var item in Model)
                                {

                                    <tr class="table-info">
                                        <td>@counter</td>
                                        <td>@item.Name</td>
                                        <td>@item.CreatedAt</td>
                                        @if (item.IsCreated == false)
                                        {   

                                            <td>  
                                            <a  class="btn btn-success btn-block btn-lg border border-white" asp-controller="Booth" asp-action="Active" asp-route-Id="@item.Id">فعال کردن</a></td>
                                        }
                                        @if (item.IsCreated == true)
                                        {
                                            <td>  <a class="btn btn-danger btn-block btn-lg border border-white" asp-controller="Booth" asp-action="Diactivated" asp-route-Id="@item.Id">غیر فعال </a></td>

                                        }
                                        
                                        
                                    </tr>

                                    counter++;
                                }

                            }
                           
                        </tbody>
                    </table>
                </div>
            </div><!-- /.table-responsive -->
        </div><!-- /.portlet-body -->
    </div><!-- /.portlet -->
</div>