@model App.EndPoints.Home_RepaireUI.Areas.Seller.Models.Product.ProductViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "ویرایش کالا";
    Layout = "~/Areas/Seller/Views/shared/_LayoutSeller.cshtml";
}
<div>
    

<form method="post" asp-action="Update"asp-controller="Product">


           
              
                            <div class="portlet-heading">
                                <div class="portlet-title">
                                    <h3 class="title">                                        
                                        <i class="icon-settings"></i>
                                       ویرایش کالا
                                    </h3>
                                </div><!-- /.portlet-title -->
                               
                            </div><!-- /.portlet-heading -->
                            <div class="portlet-body">
                               
                                    <div class="form-body">
                                        <div class="form-group row">
                                            <label class="col-sm-3">نام کالا</label>
                                            <div class="col-sm-9">
                                                <input type="text" asp-for="ProductName" class="form-control" placeholder="@Model.ProductName">
                                            </div>
                                        </div><!-- /.form-group -->
                                        <div class="form-group row">
                                            <label class="col-sm-3">قیمت</label>
                                            <div class="col-sm-9">
                                                <input type="number" asp-for="UnitPrice" class="form-control" placeholder="@Model.UnitPrice">
                                            </div>
                                        </div><!-- /.form-group -->
                                        
                                        <div class="form-group row">
                                            <label class="col-sm-3"> نوع کالا</label>
                                            <div class="col-sm-9">
                                                <select class="form-select" asp-for="@Model.AllProductId">
                                                    <option value="1">بخش فنی</option>
                                                    <option value="2">بخش مالی</option>
                                                    <option value="3">بخش اداری</option>
                                                    <option value="4">بخش فروش</option>
                                                    <option value="5">اپراتور</option>
                                                </select>
                                            </div>
                                        </div><!-- /.form-group -->


                                
                                                                        
                                    <div class="form-actions">
                                        <button type="submit" class="btn btn-info btn-round">
                                            <i class="icon-check"></i>
                                            ذخیره
                                        </button>
                                        <button type="submit"  class="btn btn-warning btn-round">
                                            بازگشت
                                            <i class="icon-close"></i>
                                        </button>
                                    </div><!-- /.form-actions -->                                
                            </div><!-- /.portlet-body -->
                      
                   
</form>
</div>